<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yello.inventory_mvc.activity.ViewPendingItemActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pending_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:textColor="#009688"
            android:text="Pending Item to be Processed"
            android:gravity="center"/>

        <TextView
            android:id="@+id/pending_item_department"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Department: "
            android:textSize="20sp"
            android:textStyle="bold"/>

        <!--<TextView
            android:id="@+id/pending_item_representative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Representative: "
            android:textSize="20sp"
            android:textStyle="bold"/>-->



        <ListView
            android:id="@+id/pending_item_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
